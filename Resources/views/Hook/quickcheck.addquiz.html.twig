<form action="{{ path('paustianquickcheckmodule_admin_attach') }}" method="post"
      enctype="application/x-www-form-urlencoded">
    <input type="hidden" id="art_id" value="{{ art_id }}">
    <input type="hidden" id="return_url" value="{{ return_url }}">
    <h3>{{('Choose an exam to attach'|trans) }}</h3>
    <table id="tableToSort" class="table table-striped">
        <thead>
        <tr>
            <th>{{('Exam Name'|trans) }}</th>
            <th>{{('Actions'|trans) }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in exams %}
        <tr>
            <td>
                {{ item.quickcheckname }}
            </td>
            <td>
               <span id="link_{{ item.id }}" class="fas fa-link" title="Link Exam"></span>
                <span id="unlink_{{ item.id }}" class="fas fa-unlink" title="Unlink Exam"></span>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</form>
<button id="DialogButton"></button>
<div id="dialog" title="Attach/Remove Exam">
    <p id="dialog_text"></p>
</div>