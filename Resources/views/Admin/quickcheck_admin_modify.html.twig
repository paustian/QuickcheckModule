<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'Exam'|trans }}</th>
        <th> {{ 'Actions'|trans }} </th>
    </tr>
    </thead>
    <tbody>
    {% for item in exams %}
        <tr>
            <td>{{ item.quickcheckname }}</td>
            <td class="actions">
                <a href="{{ path('paustianquickcheckmodule_user_print') }}/{{ item.id }}" class="fas fa-print"
                   title="{{ 'Make a printable exam'|trans }}"></a>
                <a href="{{ path('paustianquickcheckmodule_user_display') }}/{{ item.id }}" class="fas fa-eye"
                   title="{{ 'Exam Preview'|trans }}"></a>
                <a href="{{ path('paustianquickcheckmodule_qti_export', {"exam": item.id}) }}"
                   class="fa fa-arrow-circle-down" title="{{ 'Download qti export'|trans }}"></a>
                <a href="{{ path('paustianquickcheckmodule_admin_edit') }}/{{ item.id }}" class="fas fa-edit"
                   title="{{ 'Edit exam'|trans }}"></a>
                <a href="{{ path('paustianquickcheckmodule_admin_delete') }}/{{ item.id }}" class="fas fa-trash"
                   title="{{ 'Delete Exam'|trans }}"
                   onclick="return confirm('Are you sure you want to delete the exam?')"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

